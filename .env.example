# Application Settings
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:8080

# Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xache_db
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Settings
JWT_SECRET=your_jwt_secret_key
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@xache.io

# Security Settings
BCRYPT_ROUNDS=10
WALLET_ENCRYPTION_KEY=your_secure_encryption_key
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Trading Settings
DEFAULT_TRADING_FEE=0.001
MIN_ORDER_SIZE=0.0001
MAX_LEVERAGE=100
SUPPORTED_PAIRS=BTC/USDT,ETH/USDT,BNB/USDT,ADA/USDT,DOT/USDT
PRICE_UPDATE_INTERVAL=1000
ORDER_BOOK_DEPTH=100

# External API Settings
COINGECKO_API_KEY=your_coingecko_api_key
COINGECKO_API_URL=https://api.coingecko.com/api/v3

BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_API_URL=https://api.binance.com

# Logging Settings
LOG_LEVEL=info
LOG_FILE=logs/xache.log 